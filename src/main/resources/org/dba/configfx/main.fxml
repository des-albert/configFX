                    text="Search by OPE"/>

            <TableView fx:id="ucidTableView" layoutX="147.0" layoutY="95.0" prefHeight="549.0" prefWidth="587.0">
                <columns>
                    <TableColumn fx:id="ucidColumn" prefWidth="287.0" text="UCID"/>
                    <TableColumn fx:id="exportDateColumn" prefWidth="299.0" text="Export Date"/>
                </columns>
            </TableView>
        </AnchorPane>
    </Tab>
    <Tab fx:id="tabParts" text="Parts">
        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
            <TextField fx:id="ucidFileTextField" layoutX="174.0" layoutY="67.0" prefHeight="25.0" prefWidth="617.0"
                       promptText="UCID File"/>
            <Button fx:id="scanButton" layoutX="803.0" layoutY="24.0" onAction="#scanFile" text="Scan UCID"/>
            <TableView fx:id="partTableView" layoutX="174.0" layoutY="110.0" prefHeight="516.0" prefWidth="706.0">
                <columns>
                    <TableColumn fx:id="skuColumn" minWidth="0.0" prefWidth="170.0" text="SKU"/>
                    <TableColumn fx:id="descriptionColumn" prefWidth="296.0" text="Description"/>
                    <TableColumn fx:id="quantityColumn" prefWidth="129.0" text="Quantity"/>
                    <TableColumn fx:id="typeColumn" prefWidth="107.0" text="Type"/>
                </columns>
            </TableView>
            <TextField fx:id="ucidDirTextField" layoutX="174.0" layoutY="27.0" prefHeight="25.0" prefWidth="145.0"
                       promptText="UCID Directory"/>
            <CheckBox fx:id="downloadCheckBox" layoutX="524.0" layoutY="31.0" mnemonicParsing="false"
                      onAction="#onUseDownloads" text="Downloads"/>
        </AnchorPane>
    </Tab>

    <Tab fx:id="tabSKUSearch" text="SKU Search">
        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
            <Label layoutX="14.0" layoutY="25.0" text="Product:"/>
            <ComboBox fx:id="productSearchComboBox" layoutX="75.0" layoutY="21.0" prefWidth="250.0"
                      promptText="Select a Product"/>
            <Label layoutX="476.0" layoutY="25.0" text="SKU:"/>
            <TextField fx:id="skuSearchTextField" layoutX="552.0" layoutY="21.0" prefHeight="25.0" prefWidth="169.0"
                       promptText="Enter SKU to find"/>
            <Button fx:id="searchProductSkuButton" layoutX="794.0" layoutY="19.0" onAction="#searchProductSku"
                    text="Search"/>
            <TableView fx:id="skuResultsTableView" layoutX="54.0" layoutY="88.0" prefHeight="548.0" prefWidth="996.0">
                <columns>
                    <TableColumn fx:id="skuUcidColumn" prefWidth="171.0" text="UCID"/>
                    <TableColumn fx:id="skuQuantityColumn" prefWidth="96.0" text="Quantity"/>
                    <TableColumn fx:id="skuFileNameColumn" prefWidth="728.0" text="File Name"/>
                </columns>
            </TableView>
            <Label fx:id="skuSearchStatusLabel" layoutX="14.0" layoutY="60.0"
                   text="Please select a product and enter a SKU to begin."/>
            <CheckBox fx:id="skuAllProductsCheckBox" layoutX="362.0" layoutY="25.0" mnemonicParsing="false"
                      onAction="#onUseSkuAllProducts" text="All"/>
        </AnchorPane>
    </Tab>
    <Tab fx:id="tabWordSearch" text="Word Search">
        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
            <Label layoutX="14.0" layoutY="25.0" text="Product:"/>
            <ComboBox fx:id="wordSearchComboBox" layoutX="68.0" layoutY="23.0" prefWidth="250.0"
                      promptText="Select a Product"/>
            <TextField fx:id="wordSearchTextField" layoutX="459.0" layoutY="23.0" prefHeight="25.0" prefWidth="169.0"
                       promptText="Enter word to find"/>
            <Button fx:id="wordSearchButton" layoutX="761.0" layoutY="20.0" onAction="#searchWord" text="Search"/>
            <TableView fx:id="wordResultsTableView" layoutX="30.0" layoutY="100.0" prefHeight="533.0" prefWidth="988.0">
                <columns>
                    <TableColumn fx:id="wordSkuColumn" prefWidth="105.0" text="SKU"/>
                    <TableColumn fx:id="wordQuantityColumn" prefWidth="59.0" text="Quantity"/>
                    <TableColumn fx:id="wordDescColumn" prefWidth="823.0" text="Description"/>
                </columns>
            </TableView>
            <Label fx:id="wordSearchStatusLabel" layoutX="45.0" layoutY="58.0" prefHeight="18.0" prefWidth="688.0"
                   text="Please select a product and enter a word to find">
