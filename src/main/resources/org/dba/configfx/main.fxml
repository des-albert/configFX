         tabClosingPolicy="UNAVAILABLE" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1"
         fx:controller="org.dba.configfx.MainController">
    <Tab fx:id="tabMain" text="Main">
