            <Button fx:id="buttonLoad" layoutX="341.0" layoutY="28.0" mnemonicParsing="false" onAction="#loadData"
                    text="Load Data"/>
            <Button fx:id="buttonStore" layoutX="866.0" layoutY="28.0" mnemonicParsing="false"
                    onAction="#storeConfigData" text="Store Configs"/>
            <Button fx:id="buttonQuit" layoutX="893.0" layoutY="297.0" mnemonicParsing="false" onAction="#quit"
                    text="Quit"/>
            <TextField fx:id="textFieldUCID" layoutX="151.0" layoutY="30.0" promptText="ucid"/>
            <TextField fx:id="textFieldCustomer" layoutX="158.0" layoutY="86.0" prefHeight="25.0" prefWidth="631.0"/>
            <TextField fx:id="textFieldOPE" layoutX="158.0" layoutY="166.0" prefHeight="25.0" prefWidth="149.0"/>
            <TextField fx:id="textFieldFileName" layoutX="159.0" layoutY="255.0" prefHeight="25.0" prefWidth="638.0"/>
            <TextField fx:id="textFieldProduct" layoutX="158.0" layoutY="125.0" prefHeight="25.0" prefWidth="149.0"/>
            <Label layoutX="39.0" layoutY="90.0" stylesheets="@../../../css/style.css" text="Customer"/>
            <Label layoutX="40.0" layoutY="170.0" stylesheets="@../../../css/style.css" text="OPE"/>
            <Label layoutX="35.0" layoutY="259.0" prefHeight="18.0" prefWidth="63.0" text="fileName"/>
            <Label layoutX="40.0" layoutY="209.0" stylesheets="@../../../css/style.css" text="Date"/>
            <Label layoutX="36.0" layoutY="22.0" text="configFX">
                <font>
                    <Font size="24.0"/>
                </font>
            </Label>
            <Label layoutX="40.0" layoutY="129.0" prefHeight="18.0" prefWidth="81.0"
                   stylesheets="@../../../css/style.css" text="Product"/>
            <TextArea fx:id="textAreaResult" layoutX="158.0" layoutY="349.0" prefHeight="290.0" prefWidth="639.0"/>
            <TextField fx:id="textFieldDate" layoutX="158.0" layoutY="205.0" prefHeight="25.0" prefWidth="149.0"/>
            <Button fx:id="buttonParts" layoutX="889.0" layoutY="84.0" mnemonicParsing="false" onAction="#scanFile"
                    text="Parts"/>
            <RadioButton fx:id="radio2024" layoutX="467.0" layoutY="139.0" mnemonicParsing="false"
                         onAction="#yearSelect" text="2024">
                <toggleGroup>
                    <ToggleGroup fx:id="yearGroup"/>
                </toggleGroup>
            </RadioButton>
            <RadioButton fx:id="radio2025" layoutX="467.0" layoutY="170.0" mnemonicParsing="false"
                         onAction="#yearSelect" text="2025" toggleGroup="$yearGroup"/>
            <RadioButton fx:id="radio2026" layoutX="467.0" layoutY="197.0" mnemonicParsing="false"
                         onAction="#yearSelect" selected="true" text="2026" toggleGroup="$yearGroup"/>
            <Label fx:id="labelJDK" layoutX="826.0" layoutY="425.0" prefHeight="18.0" prefWidth="246.0" text="JDK"/>
            <Label fx:id="labelJavaFX" layoutX="826.0" layoutY="466.0" prefHeight="18.0" prefWidth="241.0"
                   text="JavaFX"/>

        </AnchorPane>
    </Tab>

    <Tab fx:id="tabSummary" text="Summary">
        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="450.0" prefWidth="1000.0">
            <Label layoutX="146.0" layoutY="39.0" style="-fx-font-weight: bold;" text="Monthly Totals"/>
            <TableView fx:id="productTableView" layoutX="146.0" layoutY="102.0" prefHeight="536.0" prefWidth="692.0">
                <columns>
                    <TableColumn fx:id="productColumn" prefWidth="350.0" text="Product"/>
                    <TableColumn fx:id="countColumn" prefWidth="256.0" text="Total Configs"/>
                </columns>
            </TableView>
            <ComboBox fx:id="monthComboBox" layoutX="534.0" layoutY="35.0" prefWidth="150.0" promptText="Select Month"/>
            <TextField fx:id="yearTextField" layoutX="303.0" layoutY="35.0" prefWidth="70.0" promptText="Year"/>
            <Button fx:id="reportButton" layoutX="763.0" layoutY="32.0" onAction="#generateProductReport"
                    text="Generate"/>
        </AnchorPane>
    </Tab>
    <Tab fx:id="tabOpportunity" text="Opportunity">
        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="450.0" prefWidth="1000.0">
            <Label layoutX="65.0" layoutY="35.0" style="-fx-font-weight: bold;" text="Opportunity Details"/>
            <TextField fx:id="opeTextField" layoutX="224.0" layoutY="32.0" prefWidth="180.0"
                       promptText="Enter Opportunity ID (OPE)"/>
